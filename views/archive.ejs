<% include partials/header.ejs %>
<div class="row my-1">
	<div class="col"></div>
	<div class="col-8 py-1 bg-light text-dark border border-dark">
		<h1>Archive page</h1>
		<div class="list-group">
			<% posts.forEach(function(post) { %>
				<a href="/archive/<%= post._id %>" class="list-group-item list-group-item-action mb-1">
					<h3>Author: <%= post.author %></h3>
					<p>Date: <%= post.date %></p>
					<p><%= post.postContent %></p>
				</a>
			<% }) %>
		</div>
	</div>
	<div class="col"></div>
</div>
<% include partials/footer.ejs %>